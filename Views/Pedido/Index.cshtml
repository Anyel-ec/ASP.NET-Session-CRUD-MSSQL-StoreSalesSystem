@model List<TiendaCRUD.Models.ViewModels.ListPedidoViewModel>
@{
    ViewBag.Title = "Index";
}
<!--section de estilos para el dtaable-->
<header>
    <link rel="stylesheet" href="https://cdn.datatables.net/2.0.2/css/dataTables.bootstrap5.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/2.0.2/css/dataTables.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <!-- import bs5 de iconos-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
</header>


<h2>Lista de Pedidos</h2>
<div class="row">
    <div class="col">
        <a class="btn btn-primary mt-3 mb-3" href="~/Pedido/Nuevo">
            <i class="bi bi-plus-circle-fill"></i> Nuevo Pedido
        </a>
        <br />

        <!-- tabla de producto-->

        <table id="myTable" class="display table table-bordered text-start">
            <thead>
                <tr>
                    <th>Cliente</th>
                    <th>Empleado</th>
                    <th>Estado del Pedido</th>
                    <th>Subtotal</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <!-- iterar todos los clientes que existen en el modelo-->
                @foreach (var oProducto in Model)
                {
                    <tr>
                        <td>@oProducto.nombre_cliente</td>
                        <td>@oProducto.nombre_empleado </td>
                        <td>@oProducto.nombre_estado_pedido </td>
                        <td>@oProducto.total </td>
                        <td class="justify-content-center  d-flex">
                            <a class="text-primary "
                               href="@Url.Action("Editar", "Pedido", new {id=oProducto.id_empleado})">
                                <i class="bi bi-pencil-square fs-5 m-1   " contenteditable=""></i>
                            </a>
                            <a class="text-danger"
                               href="@Url.Action("Eliminar", "Pedido", new {id=oProducto.id_empleado})"
                               onclick="return confirm('¿Estás seguro de que deseas eliminar este pedido?');">
                                <i class="bi bi-trash3-fill fs-5 m-1"></i>
                            </a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<!--datatable de jquery-->
<!--secrion de anotacion html de sectio de scripts-->
@section scripts{
    <script src="https://cdn.datatables.net/plug-ins/1.10.25/i18n/Spanish.json"></script>


    <script src="https://cdn.datatables.net/2.0.2/js/dataTables.min.js">

    </script>

    <script src="https://cdn.datatables.net/2.0.2/js/dataTables.bootstrap5.min.js">

    </script>




    <script>
        $(document).ready(function () {
            $('#myTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.25/i18n/Spanish.json"
                }
            });
        });
    </script>

}